{
  "extends": null,
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023", "DOM"],
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "join": {
      "@/*": [
        "*"
      ]
    },
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["shared/*"],
      "@effects/*": ["effects/*"]
    },
    "allowJs": false,
    "resolveJsonModule": true,
    "types": []
  },
  "include": ["apps/**/*", "shared/**/*", "effects/**/*"]
}
