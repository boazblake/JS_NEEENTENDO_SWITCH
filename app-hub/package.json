{
  "name": "wordpond",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "shared",
    "apps/*"
  ],
  "scripts": {
    "dev": "run-p dev:tv dev:controller",
    "dev:tv": "npm --workspace=@edu-games/tv run dev",
    "dev:controller": "npm --workspace=@edu-games/controller run dev",
    "server": "npm --workspace=@edu-games/server run start",
    "typecheck": "tsc -b",
    "build": "run-p build:tv build:controller",
    "build:tv": "npm --workspace=@edu-games/tv run build",
    "build:controller": "npm --workspace=@edu-games/controller run build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "eslint": "^9.14.0",
    "typescript": "^5.6.3"
  }
}
